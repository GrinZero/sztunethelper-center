{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "strict": true,
    "allowJs": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "removeComments": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "./lib",
    "typeRoots": ["./node_modules/@types/", "src/types"],
    "types": ["node"],
    "declaration": true,
    "declarationDir": "./lib/types",
    "lib": ["ESNext", "WebWorker", "scripthost"],
    "paths": {
      "#/*": ["./src/*"],
      "#service/*": ["./src/service/*"],
      "#routes/*": ["./src/routes/*"],
      "#config/*": ["./src/config/*"],
      "#common/*": ["./src/common/*"],
      "#core/*": ["./src/core/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*.js", "./src/**/*.ts", "./*.ts", "src/types/*.d.ts"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
